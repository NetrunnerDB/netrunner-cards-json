{
    "$id": "https://github.com/Alsciende/netrunner-cards-json/blob/master/schema/card_schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "allOf": [
        {
            "$ref": "#/definitions/card"
        }
    ],
    "definitions": {
        "card": {
            "additionalProperties": false,
            "oneOf": [
                {
                    "properties": {
                        "type_code": {
                            "const": "agenda"
                        }
                    },
                    "required": [
                        "advancement_cost",
                        "agenda_points"
                    ]
                },
                {
                    "properties": {
                        "type_code": {
                            "enum": [
                                "asset",
                                "upgrade"
                            ]
                        }
                    },
                    "required": [
                        "cost",
                        "trash_cost"
                    ]
                },
                {
                    "properties": {
                        "type_code": {
                            "enum": [
                                "ice"
                            ]
                        }
                    },
                    "required": [
                        "cost",
                        "strength"
                    ]
                },
                {
                    "properties": {
                        "type_code": {
                            "enum": [
                                "event",
                                "hardware",
                                "operation",
                                "program",
                                "resource"
                            ]
                        }
                    },
                    "required": [
                        "cost"
                    ]
                },
                {
                    "properties": {
                        "type_code": {
                            "const": "identity"
                        }
                    },
                    "required": [
                        "influence_limit",
                        "minimum_deck_size"
                    ]
                }
            ],
            "properties": {
                "advancement_cost": {
                    "minimum": 0,
                    "type": "integer"
                },
                "agenda_points": {
                    "minimum": 0,
                    "type": "integer"
                },
                "base_link": {
                    "minimum": 0,
                    "type": "integer"
                },
                "code": {
                    "pattern": "^[0-9]{5}$",
                    "type": "string"
                },
                "cost": {
                    "oneOf": [
                        {
                            "minimum": 0,
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "deck_limit": {
                    "minimum": 1,
                    "type": "integer"
                },
                "faction_code": {
                    "minLength": 1,
                    "type": "string"
                },
                "faction_cost": {
                    "minimum": 0,
                    "type": "integer"
                },
                "flavor": {
                    "minLength": 1,
                    "type": "string"
                },
                "flip_sides": {
                    "items": {
                        "$ref": "#/definitions/flip_side"
                    },
                    "type": "array"
                },
                "illustrator": {
                    "pattern": ".+",
                    "type": "string"
                },
                "influence_limit": {
                    "oneOf": [
                        {
                            "minimum": 0,
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "keywords": {
                    "minLength": 1,
                    "type": "string"
                },
                "memory_cost": {
                    "minimum": 0,
                    "type": "integer"
                },
                "minimum_deck_size": {
                    "minimum": 0,
                    "type": "integer"
                },
                "pack_code": {
                    "maxLength": 5,
                    "minLength": 2,
                    "type": "string"
                },
                "position": {
                    "minimum": 1,
                    "type": "integer"
                },
                "quantity": {
                    "minimum": 1,
                    "type": "integer"
                },
                "side_code": {
                    "minLength": 1,
                    "type": "string"
                },
                "strength": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "text": {
                    "minLength": 1,
                    "type": "string"
                },
                "title": {
                    "minLength": 1,
                    "type": "string"
                },
                "trash_cost": {
                    "minimum": 0,
                    "type": "integer"
                },
                "type_code": {
                    "minLength": 1,
                    "type": "string"
                },
                "uniqueness": {
                    "type": "boolean"
                }
            },
            "required": [
                "code",
                "faction_code",
                "deck_limit",
                "pack_code",
                "position",
                "quantity",
                "side_code",
                "title",
                "type_code",
                "uniqueness"
            ],
            "type": "object"
        },
        "flip_side": {
            "additionalProperties": false,
            "properties": {
                "base_link": {
                    "minimum": 0,
                    "type": "integer"
                },
                "flavor": {
                    "minLength": 1,
                    "type": "string"
                },
                "flip_side_id": {
                    "minimum": 1,
                    "type": "integer"
                },
                "illustrator": {
                    "pattern": ".+",
                    "type": "string"
                },
                "keywords": {
                    "minLength": 1,
                    "type": "string"
                },
                "text": {
                    "minLength": 1,
                    "type": "string"
                },
                "title": {
                    "minLength": 1,
                    "type": "string"
                }
            },
            "required": [
                "flip_side_id",
                "title"
            ],
            "type": "object"
        }
    }
}
